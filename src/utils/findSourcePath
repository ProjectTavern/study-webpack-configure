import * as path from 'path';
var http = require('http');
var fs = require('fs');

export default function findSourcePath (basePath, sourcePath) {
    const resultPath = path.join(basePath, sourcePath);
    const localConfigure = path.join(resultPath, 'config.json');
    console.log(localConfigure);
    fs.readFile(localConfigure, 'UTF8',(err, data) => {
        if (err) throw err;
        var object = JSON.parse(data);
        console.log(object);
    })

}