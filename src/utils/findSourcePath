import * as path from 'path';
const http = require('http');
const fs = require('fs');

export default function findSourcePath (sourcePath) {

    const extractedFiles = extractConfigs(sourcePath);

    extractedFiles.forEach(file => {
        fs.readFile(file, 'UTF8',(err, data) => {
            if (err) throw err;

            console.log(data);
        })
    });


}

function extractConfigs (dir) {
    let result = [];
    (function extractDir(_dir){
        let files = fs.readdirSync(_dir);
        files.forEach(file => {
            const name = _dir + path.sep + file;
            if(fs.statSync(name).isDirectory()){
                extractDir(name);
            } else {
                result.push(name);
            }
        });
    })(dir);
    return result;
}